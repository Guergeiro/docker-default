[user]
  email = git@brenosalles.com
  name = Breno Salles
[core]
  editor = vim
[merge]
  tool = diffconflicts
[mergetool]
  keepBackup = false
  keepTemporaries =
[mergetool "diffconflicts"]
  cmd = vim \
    -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true
[checkout]
  defaultRemote = origin
[commit]
  verbose = true
[diff]
  tool = customdiff
[difftool]
  prompt = false
[difftool "customdiff"]
  cmd = vim -R -f -d \
    -c 'wincmd h' \
    -c 'cd $GIT_PREFIX' "$REMOTE" "$LOCAL" \
